---
import "../styles/global.css";
import { getHeroLeague } from "../lib/leagues";
import Sidebar from "../components/Sidebar.svelte";
import AdRail from "../components/AdRail.svelte";

const heroLeague = getHeroLeague();
const accentColor = heroLeague?.accent_color ?? "#d97706";
---

<html lang="en" style={`--accent-color: ${accentColor}`}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <slot name="head" />
  </head>
  <body class="flex min-h-screen">
    <Sidebar client:load />
    <main class="min-w-0 flex-1 overflow-auto">
      <slot />
    </main>
    <AdRail client:load />
  </body>
</html>
