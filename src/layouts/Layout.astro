---
import "../styles/global.css";
import { getHeroLeague } from "../lib/leagues";
import Sidebar from "../components/Sidebar.svelte";
import AdRail from "../components/AdRail.svelte";
import Footer from "../components/Footer.astro";

const heroLeague = getHeroLeague();
const accentColor = heroLeague?.accent_color ?? "#d97706";
const isHome = Astro.url.pathname === "/";
---

<html lang="en" style={`--accent-color: ${accentColor}`}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <slot name="head" />
    <!-- 100% privacy-first analytics -->
    <script async src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
  </head>
  <body class="flex min-h-screen">
    {isHome && <Sidebar client:load />}
    <main class="min-w-0 flex-1 overflow-auto flex flex-col">
      <slot />
      <Footer />
    </main>
    <AdRail client:load />
  </body>
</html>
